<div class="card">
  <!--  full side column -->
  <div class="row">
    <div class="col s12"><br><br>
      <!--  profile side column -->
      <div class="row" >
        <div class="col s2">
          <img src="<%= current_user.profile_image %>">
        </div>
        <div class="col s10">
          <b><%= current_user.name %></b><br> <em>@<%= current_user.screen_name %> </em>
        </div>
      </div>
      <div class="row" id="dashboard_info">
        Tweets:  <%= @twitter.user_timeline.count %> <br>
        Followers: <%= @twitter.followers.count %> <br>
        Following:<br>
      </div>
    </div>
  </div>
</div>
